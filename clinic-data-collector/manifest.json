{
  "manifest_version": 3,
  "name": "YandexParser Analytics",
  "version": "2.0",
  "description": "Профессиональный инструмент для сбора и анализа данных организаций с Яндекс.Карт",

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads",
    "webRequest",
    "sidePanel"
  ],

  "host_permissions": [
    "<all_urls>",
    "file://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "action": {
    "default_title": "YandexParser Analytics"
  },

  "side_panel": {
    "default_path": "sidebar.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["injected.js", "auto-scroll.js"],
      "matches": ["<all_urls>", "file://*/*"]
    }
  ]
}
